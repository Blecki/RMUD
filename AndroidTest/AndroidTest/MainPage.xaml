<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AndroidTest"
             x:Class="AndroidTest.MainPage">

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="181*"/>
                <RowDefinition x:Name="BottomRow" Height="30*"/>
                <RowDefinition Height="30*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="Output" />
            <Entry x:Name="InputBox" Grid.Row="2" FontSize="14" Margin="50,0"/>
            <Button Text="SEND" Pressed="Button_Pressed" Grid.Row="1"/>
        </Grid>
    </StackLayout>

</ContentPage>
